

Host *
    StrictHostKeyChecking no
    KexAlgorithms +diffie-hellman-group1-sha1,diffie-hellman-group14-sha1
    HostKeyAlgorithms +ssh-rsa,ssh-dss # Support legacy servers (e.g. switches)
    PubkeyAcceptedKeyTypes +ssh-rsa,ssh-dss # Support legacy servers (e.g. switches)
    Ciphers +aes256-cbc
    ServerAliveInterval 300
    ServerAliveCountMax 2
    ControlMaster auto
    ControlPath ~/.ssh/cm_socket/%r@%h:%p

